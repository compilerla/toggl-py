[project]
name = "{{{projectName}}}"
version = "{{packageVersion}}"
description = "{{appDescription}}"
readme = "README.md"
license = { file = "LICENSE" }
classifiers = ["Programming Language :: Python :: 3 :: Only"]
requires-python = ">=3.11"
dependencies = [
    "certifi>=2017.4.17",
    "python-dateutil>=2.1",
    "urllib3>=1.23"
]

[project.urls]
Code = "{{packageUrl}}"
Issues = "{{packageUrl}}/issues"

[build-system]
requires = ["setuptools>=65", "wheel"]
build-backend = "setuptools.build_meta"

[tool.black]
line-length = 127
target-version = ['py311']
include = '\.pyi?$'

[tool.coverage.run]
branch = true
relative_files = true
source = ["{{appName}}"]

[tool.pyright]
include = ["{{appName}}"]

[tool.setuptools]
packages = ["{{appName}}"]
